# CivicAssist Backend Environment Variables
# Copy this file to .env and update values as needed

# Demo Mode (Phase 5)
DEMO_MODE=true

# OpenAI Fallback (Phase 5)
# Set to true to enable OpenAI as fallback when local LLM fails
USE_OPENAI_FALLBACK=false
# If enabled, provide your OpenAI API key
OPENAI_API_KEY=

# LLM Configuration
LLM_API_URL=http://localhost:1234/v1/chat/completions
LLM_MODEL_NAME=mistral-7b
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# Vector Store
VECTOR_STORE_PATH=./data/vector_store
COLLECTION_NAME=regulations

# Embedding Model
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
